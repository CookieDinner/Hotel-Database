<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@../style/style.css">
    <top>
        <Button/>
    </top>
    <center>
        <VBox minWidth="500" style="-fx-spacing: 30px; -fx-padding: 100 0 0 100">
            <HBox style="-fx-alignment: center;">
                <Label styleClass="typeLabel">Nazwa:</Label>
                <TextField styleClass="addTextField" fx:id="enazwa"/>
            </HBox>
            <HBox style="-fx-alignment: center;">
                <Label styleClass="typeLabel">Data:</Label>
                <DatePicker styleClass="addDate" fx:id="edata"/>
            </HBox>
            <HBox style="-fx-alignment: center;">
                <Label styleClass="typeLabel">Liczba os√≥b:</Label>
                <TextField styleClass="addTextField" fx:id="eliczba_osob"/>
            </HBox>
            <HBox style="-fx-alignment: center;">
                <Label styleClass="typeLabel">Hala:</Label>
                <ComboBox promptText="Wybierz" fx:id="ehala"/>
            </HBox>
            <HBox style="-fx-alignment: center;">
                <Label styleClass="typeLabel">Pracownicy:</Label>
                <ComboBox promptText="Wybierz" fx:id="epracownicy"/>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox style="-fx-padding: 100 0 0 550">
            <Button styleClass="addButton" onAction="#addKonferencje">Dodaj</Button>
        </HBox>

    </bottom>
</BorderPane>
