<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="950.0" prefHeight="750"
            stylesheets="@../style/style.css"
            style="-fx-padding: 0 20 20 20;">
    <top>
        <Button styleClass="returnButton" onAction="#returnTo">
            <graphic>
                <ImageView fitWidth="25" preserveRatio="true">
                    <Image url="@../images/arrow.png"/>
                </ImageView>
            </graphic>
        </Button>
    </top>
    <center>
        <VBox minWidth="500" style="-fx-spacing: 30px; -fx-padding: 100 0 0 100">
            <HBox style="-fx-alignment: center;">
                <Label styleClass="typeLabel">Numer:</Label>
                <TextField styleClass="addTextField" fx:id="numer"/>
            </HBox>
            <HBox style="-fx-alignment: center;">
                <Label styleClass="typeLabel">Cena za dobę:</Label>
                <TextField styleClass="addTextField" fx:id="cena"/>
            </HBox>
            <HBox style="-fx-alignment: center;">
                <Label styleClass="typeLabel">Liczba łóżek:</Label>
                <TextField styleClass="addTextField" fx:id="liczbaL"/>
            </HBox>
            <HBox style="-fx-alignment: center;">
                <Label styleClass="typeLabel">Telewizor:</Label>
                <CheckBox styleClass="check" style="-fx-min-width: 300px;"/>
            </HBox>
            <HBox style="-fx-alignment: center;">
                <Label styleClass="typeLabel">Łazienka:</Label>
                <CheckBox styleClass="check" style="-fx-min-width: 300px;"/>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox style="-fx-padding: 100 0 0 550">
            <Button styleClass="addButton" onAction="#addPokoj">Dodaj</Button>
        </HBox>
    </bottom>
</BorderPane>
